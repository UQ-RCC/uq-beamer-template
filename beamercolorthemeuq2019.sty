\makeatother


% UQ Purple, Dark->Light
\pgfdeclarehorizontalshading[]{uq2019@uqgrad1}{100bp}{
	color(0bp)=(uq2019@main1);
	color(60bp)=(uq2019@main1);
	color(75bp)=(uq2019@alt1);
	color(100bp)=(uq2019@alt1)
}

% UQ Purple, Light->Dark
\pgfdeclarehorizontalshading[]{uq2019@uqgrad2}{100bp}{
	color(0bp)=(uq2019@alt1);
	color(25bp)=(uq2019@alt1);
	color(40bp)=(uq2019@main1);
	color(100bp)=(uq2019@main1)
}


